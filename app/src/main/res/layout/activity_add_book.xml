<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hcmut.cse.bookslover.AddBookActivity">

    <ProgressBar
        android:id="@+id/loading"
        android:theme="@style/CircularProgress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/addBook_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_register_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <hcmut.cse.bookslover.CustomLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/baseInfo">

                <ImageView
                    android:id="@+id/bookCover"
                    android:layout_width="320px"
                    android:layout_height="480px"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10px"
                    android:src="@drawable/book_default"/>

            </hcmut.cse.bookslover.CustomLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_author"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_year"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_genre"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageButton
                        android:id="@+id/action_undo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/undo"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_redo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/redo"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_bold"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/bold"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_italic"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/italic"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_subscript"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/subscript"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_superscript"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/superscript"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_strikethrough"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/strikethrough"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_underline"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/underline"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_heading1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h1"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_heading2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h2"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_heading3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h3"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_heading4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h4"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_heading5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h5"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_heading6"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h6"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_txt_color"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/txt_color"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_bg_color"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/bg_color"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />


                    <ImageButton
                        android:id="@+id/action_indent"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/indent"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_outdent"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/outdent"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_align_left"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_left"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_align_center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_center"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_align_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_right"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_blockquote"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/blockquote"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/insert_image"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_link"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/insert_link"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_checkbox"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@android:drawable/checkbox_on_background"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        />

                </LinearLayout>
            </HorizontalScrollView>

            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                />

            <Button
                android:id="@+id/btnAdd"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_add"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>
